<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <!-- Base configuration: Block all cleartext traffic -->
    <base-config cleartextTrafficPermitted="false">
        <trust-anchors>
            <!-- Trust only system CA certificates -->
            <certificates src="system" />
        </trust-anchors>
    </base-config>
    
    <!-- Domain configuration: Pin certificates for our API -->
    <domain-config cleartextTrafficPermitted="false">
        <domain includeSubdomains="true">your-api-domain.com</domain>
        <!-- Certificate pinning: Add your correct SHA-256 hash here -->
        <pin-set>
            <!-- Les empreintes sont des exemples, à remplacer par les vraies -->
            <pin digest="SHA-256">AAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAA=</pin>
            <!-- Toujours ajouter une empreinte de secours -->
            <pin digest="SHA-256">BBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBB=</pin>
        </pin-set>
        <!-- Expire après 1 an-->
        <pin-set expiration="2026-05-14">
            <pin digest="SHA-256">AAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAA=</pin>
            <pin digest="SHA-256">BBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBB=</pin>
        </pin-set>
    </domain-config>
</network-security-config>